{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["dom", "esnext"],
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@lib/*": ["src/lib/*"],
      "@features/*": ["src/features/*"],
      "@config/*": ["src/config/*"],
      "@dscn/*": ["src/design-system/cn/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "src/lib/utils.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "webpack.*.js",
    "*.config.js",
    "*.test.ts*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
